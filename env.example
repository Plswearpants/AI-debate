# AI Debate Platform - Environment Variables
# Copy this file to .env and fill in your API keys

# Gemini API (for debators)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Claude API (for judge)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Perplexity API (for fact-checkers)
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Lambda GPU (for crowd)
# Setup your own endpoint with Llama 3.1 8B
LAMBDA_GPU_ENDPOINT=http://your-lambda-endpoint:8000
LAMBDA_GPU_API_KEY=your_lambda_api_key_here

# Debate Configuration (optional)
NUM_DEBATE_ROUNDS=2
CROWD_SIZE=100
RESOURCE_MULTIPLIER_THRESHOLD=0.6

# Cost Controls (optional)
# Options: "conservative" ($2/debate), "balanced" ($5/debate), "premium" ($15/debate)
COST_BUDGET_PRESET=balanced

# Logging
LOG_LEVEL=INFO
